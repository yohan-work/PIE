{
  "name": "pie-automation-project",
  "version": "1.0.0",
  "description": "Git 커밋부터 접근성 리포트까지 자동화된 워크플로우 데모 프로젝트",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 3000 -o",
    "build": "echo 'Static files ready for deployment'",
    "test": "npm run test:a11y && npm run test:visual",
    "test:a11y": "npx axe-core index.html --output a11y-report.json",
    "test:a11y-cli": "npx pa11y http://localhost:3000 --reporter json > pa11y-report.json",
    "test:visual": "npx playwright test",
    "test:lighthouse": "npx lighthouse http://localhost:3000 --output json --output-path lighthouse-report.json",
    "serve": "npx http-server . -p 3000",
    "lint:html": "npx htmlhint **/*.html",
    "lint:css": "npx stylelint **/*.css",
    "validate": "npm run lint:html && npm run lint:css",
    "format": "npx prettier --write **/*.{html,css,js,json}",
    "deploy:vercel": "npx vercel --prod",
    "deploy:netlify": "npx netlify deploy --prod --dir .",
    "report:generate": "node scripts/generate-report.js",
    "ci": "npm run validate && npm run test && npm run report:generate"
  },
  "keywords": [
    "automation",
    "accessibility",
    "testing",
    "ci-cd",
    "github-actions",
    "html",
    "css",
    "javascript"
  ],
  "author": "PIE Project",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/cli": "^4.8.2",
    "@playwright/test": "^1.40.0",
    "axe-core": "^4.8.2",
    "lighthouse": "^11.4.0",
    "pa11y": "^8.0.0",
    "pa11y-ci": "^3.1.0",
    "htmlhint": "^1.1.4",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "prettier": "^3.1.0",
    "http-server": "^14.1.1"
  },
  "dependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/pie-automation-project.git"
  },
  "homepage": "https://your-username.github.io/pie-automation-project/",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
